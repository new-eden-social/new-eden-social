{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./lib"
  },
  "include": ["*.ts", "**/*.ts"],
  "exclude": [
    "node_modules",
    "./**/*.spec.ts"
  ]
}